/*
Задание: Даны переменные a и b. Проверьте, что a делится без остатка на b.
Если это так - выведите 'Делится' и результат деления, иначе выведите 'Делится с остатком' и остаток от деления.
*/

import java.util.Scanner;
public class Main {
    public static void main(String[] args) {

        Scanner scan = new Scanner(System.in);
        double a;
        double b;
int x=1;

        do {
            System.out.println("Введите число А ");
            a = scan.nextDouble();
            System.out.println("Введите число Б ");
            b = scan.nextDouble();

            if (a%b == 0) {
                x = 0;
                System.out.println("Делится  =  " + a/b);
                }
       else System.out.println("Делится с остатком " +  a%b);

            } while (x!=0);

    }
}
